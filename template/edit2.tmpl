{{ define "content"}}
<div class="container">
  <h1 class="topText">Karteikasten erstellen / Karteikasten bearbeiten</h1>
  <h2 class="text">Hier kannst du eine neue Karte erstellen oder eine vorhandene nach Bedarf bearbeiten.</h2>


  <div class="columns editColorHead">
    <div class="column is-one-quarter editText">
      <h3>Name</h3>
      <h3 class="textBold">Geometrie</h3>
    </div>
    <div class="column is-one-quarter editText">
      <h3>Kategorie</h3>
      <h3 class="textBold">Naturwissenschaften &#9656; Mathematik</h3>
    </div>
    <div class="column is-one-quarter editText">
      <h3>Fortschritt</h3>
      <h3 class="textBold">0 %</h3>
    </div>
    <div class="column editText ">
      <div class="field is-horizontal">
        <div>
          <a class="button lernenButton" style="margin-top: 15px;">
            <strong>Bearbeiten</strong>
          </a>
        </div>
        <div>
          <div class="hexagon">
            <div>
              <div class="hexTextBold has-text-centered">23</div>
              <div class="hexText has-text-centered">Karteien</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>


  <div class="columns">
    <div class="column is-one-quarter">
      <div class="editColorTop minHeigth">
        <div>
          <h3># 1</h3>
          <h1 class="textBold">Titel der Karte</h1>
          <div class="has-text-right">
            <a class="button is-success" style="border-radius: 0px" href="">
              <strong>Bearbeiten</strong>
            </a>
            <a class="button is-danger" style="border-radius: 0px" href="">
              <span class="icon">
                <i class="fa fa-trash-o" style="font-size:24px"></i>
              </span>
            </a>
          </div>
        </div>
      </div>
      <div class="editColor minHeigth">
        <div>
          <h3># 2</h3>
          <h1 class="textBold">Titel der Karte</h1>
          <div class="has-text-right">
            <a class="button is-success" style="border-radius: 0px" href="">
              <strong>Bearbeiten</strong>
            </a>
            <a class="button is-danger" style="border-radius: 0px" href="">
              <span class="icon">
                <i class="fa fa-trash-o" style="font-size:24px"></i>
              </span>
            </a>
          </div>
        </div>
      </div>
      <div class="editColor minHeigth">
        <div>
          <h3># 3</h3>
          <h1 class="textBold">Titel der Karte</h1>
          <div class="has-text-right">
            <a class="button is-success" style="border-radius: 0px" href="">
              <strong>Bearbeiten</strong>
            </a>
            <a class="button is-danger" style="border-radius: 0px" href="">
              <span class="icon">
                <i class="fa fa-trash-o" style="font-size:24px"></i>
              </span>
            </a>
          </div>
        </div>
      </div>
      <div class="editColor minHeigth">
        <div>
          <h3># 4</h3>
          <h1 class="textBold">Titel der Karte</h1>
          <div class="has-text-right">
            <a class="button is-success" style="border-radius: 0px" href="">
              <strong>Bearbeiten</strong>
            </a>
            <a class="button is-danger" style="border-radius: 0px" href="">
              <span class="icon">
                <i class="fa fa-trash-o" style="font-size:24px"></i>
              </span>
            </a>
          </div>
        </div>
      </div>
    </div>
    <div class="column editColor">
      <div class="columns is-multiline">
        <div class="column is-2 textBold has-text-right">Titel</div>
        <div class="column">
          <input class="input is-primary" type="text" placeholder=""></div>
      </div>
      <div class="columns is-multiline">
        <div class="column is-2 textBold has-text-right">Frage</div>
        <div class="column">
          <textarea id="MyID"></textarea></div>
      </div>
      <div class="columns is-multiline">
        <div class="column is-2 textBold has-text-right">Antwort</div>
        <div class="column">
          <textarea id="MyID2"></textarea></div>
      </div>
      <div class="field horizontal has-text-centered ">
        <a class="button is-warning editButton" href="">
          <strong>Speichern</strong>
        </a>
        <a class="button is-danger editButton" href="">
          <strong>Abrechen</strong>
        </a>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  var simplemde = new SimpleMDE({
    element: document.getElementById("MyID"),
    toolbar: ["bold", "italic", "heading", "|", "quote", "unordered-list", "ordered-list", "link", "image"],
  });
</script>
<script type="text/javascript">
  var simplemde = new SimpleMDE({
    element: document.getElementById("MyID2"),
    toolbar: ["bold", "italic", "heading", "|", "quote", "unordered-list", "ordered-list", "link", "image"],
  });
</script>
{{ end }}
